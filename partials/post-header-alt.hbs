<header class="post-header {{#if feature_image}}has-image{{#has tag="#post-horiz-top"}} is-horizontal is-horizontal-top{{/has}}{{#has tag="#post-horiz-bottom"}} is-horizontal is-horizontal-bottom{{/has}}{{#has tag="#post-vert-right"}} is-vertical is-vertical-right{{/has}}{{#has tag="#post-vert-left"}} is-vertical is-vertical-left{{/has}}{{else}}no-image{{/if}}">
    {{#if feature_image}}
        <figure class="post-header-image">
            <div class="post-image-container">
                <img
                    class="post-image image-fade-in"
                    srcset="{{img_url feature_image size="xs"}} 300w, {{img_url feature_image size="s" }} 600w, {{img_url feature_image size="m" }} 800w, {{img_url feature_image size="l" }} 1200w, {{img_url feature_image size="xl" }} 1600w, {{img_url feature_image size="xxl" }} 2000w"
                    {{#has tag="#post-horiz-top, #post-horiz-bottom"}}
                        sizes="(min-width: 1600px) 1600px, 100vw"
                        src="{{img_url feature_image size="xl"}}"
                    {{else}}
                        sizes="(min-width: 1600px) 800px, (min-width: 960px) 50vw, 100vw"
                        src="{{img_url feature_image size="l"}}"
                    {{/has}}
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
            </div>
            {{#if feature_image_caption}}
                <figcaption class="post-image-caption">
                    {{feature_image_caption}}
                </figcaption>
            {{/if}}
        </figure>
    {{/if}}
    <div class="post-header-content inner">
        {{#if tags}}
            <div class="post-tags">
                {{#foreach tags}}
                    <a href="{{url}}" class="button button-small button-solid-alt">{{name}}</a>
                {{/foreach}}
            </div>
        {{/if}}
        <h1 class="post-title">{{title}}</h1>
        <div class="post-meta">
            <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="LL"}}</time>
        </div>
        <div class="post-reading-time">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</div>
    </div>
</header>
