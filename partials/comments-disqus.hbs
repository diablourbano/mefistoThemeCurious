<section class="comments-area comments-area-disqus inner">
    <h2 class="comments-title comments-title-disqus">{{t "Comments"}}</h2>
    <div class="comments-inside">
        <div id="disqus_thread"></div>
    </div>
    <noscript>{{{t "Please enable JavaScript to view the comments powered by {disqus_link}." disqus_link="<a href=\"https://disqus.com/?ref_noscript\" rel=\"nofollow\">Disqus</a>"}}}</noscript>
</section>

<script>
    var disqus_config = function () {
        this.page.url = '{{url absolute="true"}}';
        this.page.identifier = 'ghost-{{comment_id}}';
    };
    (function() {
        var d = document,
            s = d.createElement('script');
        s.src = 'https://{{@custom.disqus_shortname}}.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
    })();
</script>
