{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<main id="main" class="content outer">
    <div class="inner-wide">

        {{!-- Everything inside the #post tags pulls data from the page --}}
        {{#post}}

        <article class="{{post_class}} post-full is-page">
            {{#match @page.show_title_and_feature_image}}
                {{#has tag="#post-vert-right, #post-vert-left, #post-horiz-top, #post-horiz-bottom"}}
                    {{> "page-header-alt"}}
                {{else}}
                    {{> "page-header"}}
                {{/has}}
            {{/match}}
            {{!-- If the user has access, show page content --}}
            {{#if access}}
                <div class="post-content">
                    {{content}}
                </div>
            {{!-- If the user has no access, show subscribe/upgrade cta --}}
            {{else}}
                {{> "post-content-cta"}}
            {{/if}}
        </article>

        {{/post}}

    </div>
</main>
